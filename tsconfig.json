{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "module": "Node16",
        "skipLibCheck": true,

        "moduleResolution": "Node16",
        "isolatedModules": true,
        "moduleDetection": "force",
        "outDir": "out",
        "baseUrl": ".",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"]
}
